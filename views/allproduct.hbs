<section class="section gallery">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center mb-5">
        <h1 class="font-weight-bold">All Products</h1>
      </div>
      {{#each products}}
       <div class="col-lg-4 col-md-6 col-sm-6">
          <div class="product__item">
            <div class="product__item__pic">
              <img class="img-fluid product-image" src="{{this.imageUrl}}" alt="{{this.name}}">
            </div>
            <div class="product__item__text">
              <h6>{{this.name}}</h6>  
              <h5><a href="/productdetail/{{this._id}}" class="link-title">${{this.price}}</a></h5>
            </div>
          </div>
       </div>
      {{/each}}
    </div>
  </div>
</section>
