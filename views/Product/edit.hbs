<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Edit Product</title>
</head>
<body>
  <div class="container mt-5">
    <h1>Edit Product</h1>
    
    <form action="/product/edit/{{product._id}}" method="POST" >
      <div class="mb-3">
        <label for="title" class="form-label">Product Name</label>
        
        <input type="text" class="form-control" id="title" name="name" value="{{product.name}}" required>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price (USD)</label>
        <input type="text" class="form-control" id="price" name="price" value="{{product.price}}" required>
      </div>

      <div class="mb-3">
        <label for="image01" class="form-label">Image 01 URL</label>
        <input type="text" class="form-control" id="image01" name="imageUrl" value="{{product.imageUrl}}" required>
      </div>


       <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" required>{{product.description}}</textarea>
      </div>

     <div class="mb-3">
        <label for="categories" class="form-label">Category</label>
        <select class="form-select" id="categories" name="category" required>
        <option value="">Select a category</option>
        {{#each categories}}
            <option value="{{this._id}}" {{#if isSelected}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
    </select>
      </div>

    <div class="mb-3">
        <label for="title" class="form-label">Stock</label>
        
        <input type="text" class="form-control" id="title" name="stock" value="{{product.stock}}" required>
      </div>


      <button type="submit" class="btn btn-primary">Update Product</button>
      <a href="/product" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
  <script>
document.querySelector('form').addEventListener('submit', function(event) {
    console.log('Form is being submitted');
    console.log('Title:', document.getElementById('title').value);
    console.log('Price:', document.getElementById('price').value);
    console.log('Image URL:', document.getElementById('image01').value);
    // Thêm log cho các trường khác nếu cần
});
</script>
</body>
</html>